<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{photo.title}}</title>
  <link rel="stylesheet" href="/public/css/styles.css">
</head>
<body>
  <header>
    <h1>{{photo.title}}</h1>
    <p><a href="/albums/{{photo.albumId}}">‚Üê Back to Album</a></p>
  </header>
  <main>
    <figure class="photo-figure">
      <img src="/public/photos/{{photo.filename}}" alt="{{photo.title}}" style="max-width:300px;">
      {{#if photo.description}}<figcaption>{{photo.description}}</figcaption>{{/if}}
    </figure>
    <p><a class="btn" href="/photos/{{photo._id}}/edit">Edit</a></p>
  </main>
</body>
</html>
