<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Edit: {{photo.title}}</title>
  <link rel="stylesheet" href="/public/css/styles.css">
</head>
<body>
  <header>
    <h1>Edit Photo</h1>
    <p><a href="/photos/{{photo._id}}">‚Üê Cancel</a></p>
  </header>
  <main>
    {{#if error}}<p class="error">{{error}}</p>{{/if}}
    <form method="post" action="/photos/{{photo._id}}/edit" class="edit-form">
      <div class="form-row">
        <label for="title">Title</label>
        <input id="title" name="title" type="text" maxlength="200" value="{{photo.title}}" required>
      </div>
      <div class="form-row">
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="5" maxlength="1000">{{photo.description}}</textarea>
      </div>
      <button type="submit" class="btn">Save</button>
    </form>
  </main>
</body>
</html>
